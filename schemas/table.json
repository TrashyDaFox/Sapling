{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["columns", "rows"],
  "additionalProperties": false,
  "properties": {
    "columns": {
      "title": "Columns",
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "[a-z0-9_]": {
          "type": "object",
          "required": ["name"],
          "additionalProperties": false,
          "properties": {
            "name": {
              "title": "Column Name",
              "description": "Name displayed in the header of the column.",
              "type": "string"
            },
            "default": {
              "title": "Default Cell Value",
              "$ref": "#/definitions/value"
            },
            "sortable": {
              "title": "Sortable Column",
              "description": "Whether rows can be sorted based on their value for this column.",
              "type": "boolean"
            },
            "text_align": {
              "title": "Column Text Alignment",
              "enum": ["left", "center", "right"]
            }
          }
        }
      }
    },
    "rows": {
      "title": "Rows",
      "type": "array",
      "minItems": 1,
      "additionalItems": false,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": {
          "[a-z0-9_]": {
            "title": "Cell Value",
            "$ref": "#/definitions/value"
          }
        }
      }
    }
  },
  "definitions": {
    "value": {
      "description": "Cells can display booleans (as ticks and crosses), numbers, strings and arrays (as bullet-point lists).",
      "oneOf": [
        {
          "type": ["boolean", "number", "string"]
        },
        {
          "type": "array",
          "additionalItems": false,
          "items": {
            "type": "string"
          }
        }
      ]
    }
  }
}
